# !!! Managed by Puppet !!!

VCS="<%= @vcs %>"

<% if @bzr_commit_options -%>
BZR_COMMIT_OPTIONS="<%= @bzr_commit_options %>"
<% end -%>
<% if @darcs_commit_options -%>
DARCS_COMMIT_OPTIONS="<%= @darcs_commit_options %>"
<% end -%>
<% if @git_commit_options -%>
GIT_COMMIT_OPTIONS="<%= @git_commit_options %>"
<% end -%>
<% if @hg_commit_options -%>
HG_COMMIT_OPTIONS="<%= @hg_commit_options %>"
<% end -%>

<% unless @avoid_daily_autocommits.nil? or ! @avoid_daily_autocommits -%>
AVOID_DAILY_AUTOCOMMITS=1
<% end -%>
<% unless @avoid_special_file_warning.nil? or ! @avoid_special_file_warning -%>
AVOID_SPECIAL_FILE_WARNING=1
<% end -%>
<% unless @avoid_commit_before_install.nil? or ! @avoid_commit_before_install -%>
AVOID_COMMIT_BEFORE_INSTALL=1
<% end -%>

HIGHLEVEL_PACKAGE_MANAGER=<%= @highlevel_package_manager %>
LOWLEVEL_PACKAGE_MANAGER=<%= @lowlevel_package_manager %>

PUSH_REMOTE="<%= @push_remotes ? @push_remotes.join(' ') : '' %>"
